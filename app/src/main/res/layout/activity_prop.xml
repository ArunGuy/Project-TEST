<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:gravity="start" android:id="@+id/linearProp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyleyellow_50">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearHead"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_47pxh"
            android:layout_marginStart="@dimen/_47pxh"
            android:layout_marginTop="@dimen/_113pxv"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/imageArrowleft"
                android:layout_height="@dimen/_12pxh"
                android:layout_marginBottom="@dimen/_5pxv"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_width="@dimen/_6pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtPROPORTIONS"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_72pxh"
                android:layout_weight="0.96" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@string/lbl_proportions"
                style="@style/txtIntersemibold20" tools:text="@string/lbl_proportions"/>
        </LinearLayout>
        <ImageView android:id="@+id/imageImageEight"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_240pxh"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_52pxv"
            android:layout_width="@dimen/_300pxh"
            android:scaleType="fitXY" imageRes="@{@drawable/img_image8}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_image8"/>
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="center_horizontal"
            android:id="@+id/recyclerDetail"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            itemSpace="@{@dimen/_1pxh}" style="@style/groupStyle_1"
            tools:itemCount="6" tools:listitem="@layout/row_detail"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnSuccess"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_9pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_9pxv" android:singleLine="true"
            android:text="@string/lbl_success"
            android:textAllCaps="false" style="@style/btnSolidRounded" tools:text="@string/lbl_success"/>
    </LinearLayout>
</layout>
